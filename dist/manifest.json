{
  "name": "Simple Timer",
  "description": "A simple timer webextension",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Show a timer on this page"
  },
  "manifest_version": 2
}